---
const { title } = Astro.props
---

<div class="p-4 not-prose">
    <div class="flex justify-start items-center mb-2">
        <div class="icon">
            <slot name="icon" />
        </div>
        <h3 class="text-2xl font-bold mb-2 leading-4 uppercase pt-1.5 text-black">{ title }</h3>
    </div>
    <slot />
</div>

<style>
h3 {
    @apply ml-2
}
p {
    @apply mt-5
}
</style>
