---
import '../styles/global.css';
import Icon from '../components/Icon.vue'
const { title } = Astro.props;
---
<html lang="en">
  <head>
    <title>{ title } | Accessible Instruments</title>
  </head>
  <body class="px-4">
    <header class="border wrapper bg-white shadow mt-4 sm:mt-8 mb-4 rounded mx-2 p-4 py-2 flex flex-col sm:flex-row sm:justify-between">
        <nav class="sm:space-x-2 flex flex-col sm:flex-row">
          <a href="/">Home</a>
          <a href="/framework">Framework</a>
          <a href="/tool">Evaluation Tool</a>
        </nav>
        <div class="hidden sm:flex gap-2 py-2">
          <Icon name="durability" tw="h-6 w-6" />
          <Icon name="flexibility" tw="h-6 w-6" />
          <Icon name="practicality" tw="h-6 w-6" />
          <Icon name="complexity" tw="h-6 w-6" />
          <Icon name="compatibility" tw="h-6 w-6" />
        </div>
    </header>
    <main class="wrapper py-4">
      <slot />
    </main>
  </body>
</html>

<style>
nav a {
  @apply py-2 inline-block;
}
</style>
